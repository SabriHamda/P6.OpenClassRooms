{% extends 'frontend/layout.html.twig' %}

{% block content %}
<!=====----- navigation -----=====>
{% include('frontend/parts/navigation.html.twig') %}
<!=====----- navigation end-----=====>

<div class="main-container container-fluid col-sm-12 col-md-6 col-lg-4">

    {{ form_start(form,{'attr':{'class':'register-form','method':'post'}}) }}
    <div class="form-group">
        {{ form_errors(form) }}
            {% for error in errors %}
                <div class="alert alert-danger" role="alert">
                    {{ error.message }}
                </div>
            {% endfor %}
    </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Nom d'utilisateur</label>
            {{ form_widget(form.username,{ 'attr': {'class': 'pimp'} }) }}
                <span class="form-loader"></span>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Adresse email</label>
            {{ form_widget(form.email,{ 'attr': {'class': 'pimp'} }) }}
                <span class="form-loader"></span>
            <small class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label>Mot de passe</label>
            {{ form_widget(form.password.first,{ 'attr': {'class': 'pimp'} }) }}
                <span class="form-loader"></span>
        </div>
        <div class="form-group">
            <label>Confirmer le mot de passe</label>
            {{ form_widget(form.password.second,{ 'attr': {'class': 'pimp'} }) }}
            <span class="form-loader"></span>
        </div>
    {{ form_errors(form.password) }}
        <div class="form-group">
            <small><a href="#">deja un compte ? </a></small>
        </div>
        <button type="submit" class="btn btn-primary">S'enregistrer</button>
    {{ form_end(form) }}

</div>

{% endblock content%}
