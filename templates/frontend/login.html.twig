{% extends 'frontend/layout.html.twig' %}

{% block content %}
<!=====----- navigation -----=====>
{% include('frontend/parts/navigation.html.twig') %}
<!=====----- navigation end-----=====>

<div class="main-container container-fluid col-sm-12 col-md-12 col-lg-6">
    <form method="post" class="register-form">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Veuillez vous identifier</h1>
        <div class="form-group">
    <label>* Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control pimp" required autofocus>
        <span class="form-loader"></span>
        </div>

        <div class="form-groupe">
        <label>* Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control pimp" required>
        <span class="form-loader"></span>
        </div>

        <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">
        Envoyer
    </button>
    </form>
</div>
    {% endblock %}
