{% extends 'frontend/layout.html.twig' %}

{% block content %}
    <div class="main-container container-fluid col-sm-12 col-md-12 col-lg-6">
        <form method="post" class="register-form">
            <div class="street-titles col-12">
                <h1>Login</h1>
            </div>
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <h2 class="h2 mb-3 font-weight-normal">Veuillez vous identifier</h2>
            <div class="form-group">
                <label>* Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control pimp" required autofocus>
                <span class="form-loader"></span>
            </div>
            <div class="form-groupe">
                <label>* Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control pimp" required>
                <span class="form-loader"></span>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button class="btn btn-lg btn-primary" type="submit">
                Envoyer
            </button>
            <div class="col-md-12">
                <div class="form-group text-right">
                    <small> Les champs marqu√©s avec un asterisque (*) sont obligatoires.</small>
                </div>
                <div class="form-group text-right">
                    <small><a href="{{ path('reset-password') }}"><i class="fas fa-sign-in-alt"></i> &nbsp; Mot de passe perdu ? </a></small>
                </div>
            </div>
        </form>
    </div>

    <!=====----- footer -----=====>
    {% include('frontend/parts/footer.html.twig') %}
    <!=====----- footer end -----=====>

{% endblock %}
