{% block navigation %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand site-name" href="#">
            <img src="{{ asset('img/logo.png') }}" width="100" height="50" class="d-inline-block align-top" alt="">
            Snow Tricks
        </a>



        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            {% set actual_route = app.request.attributes.get('_route') %}
            <ul class="navbar-nav">
                {% if is_granted('ROLE_USER') %}
                    <li>
                        <a class="navbar-brand nav-profile" href="#">
                            <img src="{{ app.user.image.publicUrl }}" width="40" height="40"
                                 class="d-inline-block align-top" alt="" style="border-radius:40px;margin-top:-3px;">
                            &nbsp;{{ app.user.username }}
                        </a>
                    </li>
                {% endif %}
                {% if actual_route == 'home' %}
                <li class="nav-item active">
            {% else %}
                <li class="nav-item">
                    {% endif %}
                    <a class="nav-link" href="{{ path('home') }}">Accueil</a>
                </li>

                {% if actual_route == 'tricks' or app.request.server.get('PATH_INFO') == ('/view-trick/'~trick.id|default) or actual_route == 'add-trick' %}
                <li class="nav-item active">
            {% else %}
                </li>
                {% endif %}
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Tricks</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="#">Mes Tricks</a>
                        <a class="dropdown-item" href="{{ path('add-trick') }}">Ajouter</a>
                    </div>
                </li>
                {% if not is_granted('ROLE_USER') %}
                    {% if actual_route == 'login' %}
                        <li class="nav-item active">
                    {% else %}
                        <li class="nav-item">
                    {% endif %}
                    <a class="nav-link" href="{{ path('login') }}">Login</a>
                    </li>
                    {% if actual_route == 'user_registration' %}
                        <li class="nav-item active">
                    {% else %}
                        <li class="nav-item">
                    {% endif %}
                    <a class="nav-link" href="{{ path('user_registration') }}">Register</a>
                    </li>
                {% else %}
                    {% if actual_route == 'logout' %}
                        <li class="nav-item active">
                    {% else %}
                        <li class="nav-item">
                    {% endif %}
                    <a class="nav-link" href="{{ path('logout') }}">Logout</a>
                    </li>
                {% endif %}

            </ul>
        </div>
    </nav>
{% endblock navigation %}