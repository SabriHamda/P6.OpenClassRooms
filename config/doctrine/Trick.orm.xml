<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="App\Domain\Entity\Trick" table="trick" repository-class="App\Domain\Repository\TrickRepository">
    <id name="id" type="uuid" column="id">
      <generator strategy="CUSTOM" />
      <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator"/>
    </id>
    <field name="commentId" type="integer" column="comment_id" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="name" type="string" column="name" length="50" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="slug" type="string" column="slug" length="60" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="description" type="string" column="description" length="1255" nullable="false"/>
    <field name="createdAt" type="datetime" column="created_at" nullable="false">
      <options>
        <option name="default">CURRENT_TIMESTAMP</option>
      </options>
    </field>
    <field name="updatedAt" type="datetime" column="updated_at" nullable="true">
      <options>
        <option name="default">CURRENT_TIMESTAMP</option>
      </options>
    </field>
    <one-to-many field="media" target-entity="App\Domain\Entity\Media" mapped-by="trick">
      <cascade>
        <cascade-all/>

      </cascade>
    </one-to-many>
    <many-to-one field="category" target-entity="App\Domain\Entity\Category" >
      <join-column name="category_id" referenced-column-name="id" />
    </many-to-one>

    <many-to-one field="user" target-entity="App\Domain\Entity\User">
      <join-column name="user_id" referenced-column-name="id"/>
    </many-to-one>
  </entity>
</doctrine-mapping>
